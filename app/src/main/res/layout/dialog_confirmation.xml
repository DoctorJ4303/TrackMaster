<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/confirmation_background"
        android:layout_width="310dp"
        android:layout_height="155dp"
        android:background="@drawable/round_corners"
        android:backgroundTint="@color/blue_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/confirmation_foreground"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_corners"
        android:backgroundTint="@color/blue_500"
        app:layout_constraintBottom_toBottomOf="@+id/confirmation_background"
        app:layout_constraintEnd_toEndOf="@+id/confirmation_background"
        app:layout_constraintStart_toStartOf="@+id/confirmation_background"
        app:layout_constraintTop_toTopOf="@+id/confirmation_background" />

    <Button
        android:id="@+id/confirmation_confirm"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="@+id/confirmation_foreground"
        app:layout_constraintEnd_toEndOf="@+id/confirmation_foreground" />

    <Button
        android:id="@+id/confirmation_deny"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="-2dp"
        android:text="CANCEL"
        app:layout_constraintBottom_toBottomOf="@+id/confirmation_foreground"
        app:layout_constraintStart_toStartOf="@+id/confirmation_foreground" />

    <TextView
        android:id="@+id/confirmation_text"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="@string/empty"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/confirmation_background"
        app:layout_constraintStart_toStartOf="@+id/confirmation_background"
        app:layout_constraintTop_toTopOf="@+id/confirmation_background" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TrackMaster" parent="android:Theme.Material.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/blue_200</item>
        <item name="android:colorSecondary">@color/blue_700</item>
        <item name="android:colorAccent">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_700</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/blue_700</item>
    </style>
    <style name="Theme.TrackMaster.Popup" parent="Theme.AppCompat.Dialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/round_corners</item>
    </style>
    <style name="Theme.TrackMaster.Button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/blue_200</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:background">@drawable/round_corners</item>
    </style>
    <style name="Theme.TrackMaster.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.TrackMaster.Subtext" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#979797</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>